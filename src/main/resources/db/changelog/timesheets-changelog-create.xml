<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- create table TIMESHEETS -->
    <changeSet id="1" author="team2">
        <createTable tableName="TIMESHEETS">
            <column name="ID" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="WORK_DATE" type="DATE"/>
            <column name="CONTENT" type="VARCHAR(255)"/>
            <column name="TIMESHEETS_CODE" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="team2">
        <addUniqueConstraint columnNames="WORK_DATE, TIMESHEETS_CODE" constraintName="UNIQUE_WORK_DATE_TIMESHEETS_CODE" tableName="TIMESHEETS"/>
    </changeSet>

    <changeSet id="3" author="team2">
        <dropColumn tableName="TIMESHEETS" columnName="CONTENT"/>

        <addColumn tableName="TIMESHEETS">
            <column name="CHECKIN" type="VARCHAR(255)"/>
        </addColumn>

        <addColumn tableName="TIMESHEETS">
            <column name="CHECKOUT" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>

