<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- create table FEELING_OF_BOOK -->
    <changeSet id="1" author="team2">
        <createTable tableName="FEELING_OF_BOOK">
            <column name="ID" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="USER_ID" type="VARCHAR(255)"/>
            <column name="FEELING" type="NVARCHAR(1000)"/>
            <column name="QUOTE" type="NVARCHAR(1000)"/>
            <column name="LESSION" type="NVARCHAR(1000)"/>
            <column name="ACTION" type="NVARCHAR(1000)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="BOOK_ID" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="team2">
        <addUniqueConstraint
                tableName="FEELING_OF_BOOK"
                columnNames="USER_ID, BOOK_ID"
                constraintName="unique_user_book"
        />
    </changeSet>
</databaseChangeLog>
