<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- create table SETTING -->
    <changeSet id="1" author="team2">
        <createTable tableName="SETTING">
            <column name="ID" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="CODE" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="IMAGE_TYPE" type="VARCHAR(255)"/>
            <column name="FILE_TYPE" type="VARCHAR(255)"/>
            <column name="FILE_SIZE" type="INT"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="team2">
        <renameColumn tableName="SETTING" oldColumnName="FILE_SIZE" newColumnName="FILE_LIMIT" columnDataType="INT"/>
    </changeSet>

    <changeSet id="3" author="team2">
        <addColumn tableName="SETTING">
            <column name="FILE_SIZE" type="INT" />
        </addColumn>
    </changeSet>
</databaseChangeLog>

