<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- create table WEEKLY_REPORT -->
    <changeSet id="1" author="team2">
        <createTable tableName="WEEKLY_REPORT">
            <column name="ID" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="TITLE" type="VARCHAR(255)"/>
            <column name="CURRENT_WEEKLY_CONTENT" type="TEXT"/>
            <column name="NEXT_WEEKLY_CONTENT" type="TEXT"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="USER_ID" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="team2">
        <modifyDataType tableName="WEEKLY_REPORT" columnName="CURRENT_WEEKLY_CONTENT" newDataType="LONGTEXT"/>
        <modifyDataType tableName="WEEKLY_REPORT" columnName="NEXT_WEEKLY_CONTENT" newDataType="LONGTEXT"/>
    </changeSet>
</databaseChangeLog>
