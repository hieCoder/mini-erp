<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- create table user -->
    <changeSet id="1" author="team2">
        <createTable tableName="user">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fullname" type="VARCHAR(255)"/>
            <column name="date_of_birth" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="emergency_phone" type="VARCHAR(255)"/>
            <column name="avatar" type="LONGTEXT"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="department" type="VARCHAR(255)"/>
            <column name="working_date" type="VARCHAR(255)"/>
            <column name="contract" type="VARCHAR(255)"/>
            <column name="basic_salary" type="VARCHAR(255)"/>
            <column name="allowance" type="VARCHAR(255)"/>
            <column name="insurance" type="VARCHAR(255)"/>
            <column name="atm" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="role" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(255)"/>
            <column name="position" type="VARCHAR(255)"/>
            <column name="resume" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="team2">
        <addColumn tableName="user">
            <column name="is_first_update_profile" type="BIT"/>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="team2">
        <modifyDataType tableName="user" columnName="avatar" newDataType="VARCHAR(255)"/>
    </changeSet>

    <changeSet id="4" author="team2">
        <modifyDataType tableName="user" columnName="date_of_birth" newDataType="DATE"/>
    </changeSet>

    <changeSet id="5" author="team2">
        <addColumn tableName="user">
            <column name="timesheets_code" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="6" author="team2">
        <addUniqueConstraint tableName="user" columnNames="timesheets_code" constraintName="unique_timesheets_code"/>
    </changeSet>

</databaseChangeLog>