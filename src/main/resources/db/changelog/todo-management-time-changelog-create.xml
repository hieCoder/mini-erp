<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- create table todo-management-time -->
    <changeSet id="1" author="team2">
        <createTable tableName="todo-management-time">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="day" type="DATE"/>
            <column name="target" type="VARCHAR(255)"/>
            <column name="performence" type="BIT"/>
            <column name="user_id" type="VARCHAR(255)"/>
            <column name="category-management-time_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="team2">
        <addColumn tableName="todo-management-time">
            <column name="management-time_id" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="team2">
        <renameColumn tableName="todo-management-time" oldColumnName="performence" newColumnName="performance" columnDataType="BIT"/>
    </changeSet>
</databaseChangeLog>

