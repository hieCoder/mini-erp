<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- create table contract -->
    <changeSet id="1" author="team2">
        <createTable tableName="contract">
            <column name="id" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="basic_salary" type="VARCHAR(255)"/>
            <column name="allowance" type="VARCHAR(255)"/>
            <column name="contract" type="VARCHAR(255)"/>
            <column name="created_date" type="DATE"/>
            <column name="user_id" type="VARCHAR(255)"/>
            <column name="insurance_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="team2">
        <addColumn tableName="contract">
            <column name="status" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="team2">
        <dropForeignKeyConstraint baseTableName="contract"
                                  constraintName="fk_contract_insurance"/>
    </changeSet>

    <changeSet id="4" author="team2">
        <dropColumn tableName="contract" columnName="insurance_id"/>
    </changeSet>

    <changeSet id="5" author="team2">
        <addColumn tableName="contract">
            <column name="insurance_type" type="VARCHAR(255)"/>
        </addColumn>
        <addColumn tableName="contract">
            <column name="money" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="6" author="team2">
        <renameColumn tableName="contract" oldColumnName="money" newColumnName="insurance_money" columnDataType="VARCHAR(255)"/>
    </changeSet>
</databaseChangeLog>