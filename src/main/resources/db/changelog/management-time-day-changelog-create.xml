<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- create table MANAGEMENT_TIME_DAY -->
    <changeSet id="1" author="team2">
        <createTable tableName="MANAGEMENT_TIME_DAY">
            <column name="ID" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ONE_THING_CALENDAR" type="VARCHAR(255)"/>
            <column name="TO_DO_LIST" type="VARCHAR(255)"/>
            <column name="GRATITUDE_DIARY" type="VARCHAR(255)"/>
            <column name="AFFIRMATION" type="VARCHAR(255)"/>
            <column name="DAY" type="DATE"/>
            <column name="USER_ID" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="team2">
        <modifyDataType tableName="MANAGEMENT_TIME_DAY" columnName="ONE_THING_CALENDAR" newDataType="TEXT"/>
        <modifyDataType tableName="MANAGEMENT_TIME_DAY" columnName="TO_DO_LIST" newDataType="TEXT"/>
        <modifyDataType tableName="MANAGEMENT_TIME_DAY" columnName="GRATITUDE_DIARY" newDataType="TEXT"/>
        <modifyDataType tableName="MANAGEMENT_TIME_DAY" columnName="AFFIRMATION" newDataType="TEXT"/>
    </changeSet>

</databaseChangeLog>
