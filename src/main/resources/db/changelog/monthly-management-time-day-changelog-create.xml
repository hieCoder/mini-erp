<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <!-- create table MONTHLY_MANAGEMENT_TIME_DAY -->
    <changeSet id="1" author="team2">
        <createTable tableName="MONTHLY_MANAGEMENT_TIME_DAY">
            <column name="ID" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="CODE" type="VARCHAR(255)"/>
            <column name="CONTENT" type="TEXT"/>
            <column name="USER_ID" type="VARCHAR(255)"/>
            <column name="DAILY_ROUTINE" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="team2">
        <addColumn tableName="MONTHLY_MANAGEMENT_TIME_DAY">
            <column name="SPENDING_GOALS" type="FLOAT"/>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="team2">
        <addColumn tableName="MONTHLY_MANAGEMENT_TIME_DAY">
            <column name="COLOR" type="VARCHAR(1000)"/>
        </addColumn>
    </changeSet>

    <changeSet id="4" author="team2">
        <addColumn tableName="MONTHLY_MANAGEMENT_TIME_DAY">
            <column name="TARGET_CATEGORY" type="VARCHAR(1000)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
