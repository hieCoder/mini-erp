<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shsoftvina.erpshsoftvina.mapper.CommentNotificationMapper">
    <insert id="createCommentNotification" parameterType="com.shsoftvina.erpshsoftvina.entity.CommentNotification" >
        INSERT
        INTO comment_notification (created_date, content, id, notification_id, user_id, parent_id)
        VALUES (NOW(), #{content}, #{id},#{notification.id}, #{user.id}, #{parentId});
    </insert>

    <update id="updateCommentNotification" parameterType="com.shsoftvina.erpshsoftvina.entity.CommentNotification">
        UPDATE comment_notification
        SET
            content = #{content},
            modified_by = #{modifiedBy},
            modified_date = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteCommentNotificationNoChild" parameterType="java.lang.String">
          DELETE FROM comment_notification WHERE id = #{id}
    </delete>

    <delete id="deleteCommentNotificationHasChild" parameterType="java.lang.String">
        DELETE FROM comment_notification WHERE parent_id = #{id};
        DELETE FROM comment_notification WHERE id = #{id}
    </delete>

    <select id="getCommentById" parameterType="java.lang.String" resultType="com.shsoftvina.erpshsoftvina.entity.CommentNotification" resultMap="commentNotificationResultMap">
        SELECT * FROM comment_notification WHERE id = #{id}
    </select>

    <select id="getCommentChildById" parameterType="java.lang.String" resultType="com.shsoftvina.erpshsoftvina.entity.CommentNotification" resultMap="commentNotificationResultMap">
        SELECT * FROM comment_notification WHERE parent_id = #{id} LIMIT 1
    </select>

    <resultMap id="commentNotificationResultMap" type="com.shsoftvina.erpshsoftvina.entity.CommentNotification">
        <id property="id" column="id" />
        <result property="parentId" column="parent_id" />
    </resultMap>
</mapper>