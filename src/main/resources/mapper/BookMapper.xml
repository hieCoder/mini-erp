<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shsoftvina.erpshsoftvina.mapper.BookMapper">

    <select id="findAll" parameterType="org.apache.ibatis.session.RowBounds" resultMap="bookResultMap">
        SELECT *
        FROM BOOK b
        WHERE b.TITLE LIKE '%' #{searchTerm} '%' OR SUBSTRING_INDEX(b.CREATED_BY, ' ', -1) LIKE '%' #{searchTerm} '%'
    </select>

    <select id="totalBook" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM BOOK b
        WHERE b.TITLE LIKE '%' #{searchTerm} '%' OR SUBSTRING_INDEX(b.CREATED_BY, ' ', -1) LIKE '%' #{searchTerm} '%'
    </select>

    <update id="updateBook" parameterType="com.shsoftvina.erpshsoftvina.entity.Book">
        UPDATE BOOK
        SET TITLE = #{title},
            AUTHOR = #{author},
            LINK = #{link}
        WHERE ID = #{id}
    </update>

    <resultMap id="bookResultMap" type="com.shsoftvina.erpshsoftvina.entity.Book">
        <id property="id" column="ID"/>
        <result property="title" column="TITLE"/>
        <result property="author" column="AUTHOR"/>
        <result property="link" column="LINK"/>
        <result property="createdDate" column="CREATED_DATE"/>
        <result property="createdBy" column="CREATED_BY"/>
        <result property="image" column="IMAGE"/>
    </resultMap>

    <insert id="createBook" parameterType="com.shsoftvina.erpshsoftvina.entity.Book">
        INSERT
        INTO BOOK (ID, TITLE, AUTHOR, LINK, CREATED_DATE, CREATED_BY, IMAGE)
        VALUES (#{id}, #{title}, #{author}, #{link}, #{createdDate}, #{createdBy}, #{image})
    </insert>

    <delete id="deleteBook" parameterType="String">
        DELETE
        FROM BOOK
        WHERE ID = #{id}
    </delete>

    <select id="findById" resultMap="bookResultMap">
        SELECT *
        FROM BOOK
        WHERE ID = #{id}
    </select>
</mapper>