<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shsoftvina.erpshsoftvina.mapper.BookMapper">

    <select id="findAll" parameterType="com.shsoftvina.erpshsoftvina.entity.Book" resultMap="bookResultMap">
        SELECT *
        FROM BOOK
    </select>

    <update id="updateBook" parameterType="com.shsoftvina.erpshsoftvina.entity.Book">
        UPDATE BOOK
        SET TITLE = #{title},
            AUTHOR = #{author},
            LINK = #{link}
        WHERE ID = #{id}
    </update>

    <select id="findById" resultMap="bookDetailResultMap">
        SELECT *
        FROM BOOK b
            INNER JOIN USER u ON b.USER_ID = u.ID
            INNER JOIN FEELING_OF_BOOK f ON FEELING_OF_BOOK.BOOK_ID = b.ID
        WHERE b.ID = #{id}
    </select>

    <resultMap id="bookResultMap" type="com.shsoftvina.erpshsoftvina.entity.Book">
        <id property="id" column="id"/>
        <result property="title" column="TITLE"/>
        <result property="author" column="AUTHOR"/>
        <result property="link" column="LINK"/>
    </resultMap>

    <insert id="createBook" parameterType="com.shsoftvina.erpshsoftvina.entity.Book">
        INSERT
        INTO BOOK (ID, TITLE, AUTHOR, LINK)
        VALUES (#{id}, #{title}, #{author}, #{link});
    </insert>

    <delete id="deleteBook" parameterType="String">
        DELETE
        FROM BOOK
        WHERE ID = #{id}
    </delete>

    <resultMap id="bookDetailResultMap" type="com.shsoftvina.erpshsoftvina.entity.Book">
        <id property="id" column="id"/>
        <result property="title" column="TITLE"/>
        <result property="author" column="AUTHOR"/>
        <result property="link" column="LINK"/>
        <association property="user" column="USER_ID" javaType="com.shsoftvina.erpshsoftvina.entity.User" resultMap="userResultMap"/>
<!--        <collection property="feelingOfBooks" column="FEELING_OF_BOOK_ID" ofType="com.shsoftvina.erpshsoftvina.entity.CommentNotification" select="feelingOfBooksSelect" />-->
    </resultMap>

    <resultMap id="userResultMap" type="com.shsoftvina.erpshsoftvina.entity.User">
        <id property="id" column="USER_ID" />
        <result property="fullname" column="FULLNAME" />
        <result property="avatar" column="AVATAR" />
    </resultMap>

